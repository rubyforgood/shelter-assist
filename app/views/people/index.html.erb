<h1>Fosters List</h1>

<table border="1">
  <tr>
    <th>Name</th>
    <th>Rescue</th>
    <th>Phone Number</th>
    <th>Email</th>
    <th></th>
  </tr>
  <% @people.each do |person| %>
    <tr>
      <td><%= person.full_name%></td>
      <td>The Little Black Dog</td>
      <td><%=number_to_phone(person.phone, area_code: true )%></td>
      <td><%=person.email %></td>
      <td><%= link_to "Edit", edit_person_path(person)%></td>
    </tr>
  <% end %>
</table>
