<!DOCTYPE html>
<html>
  <head>
    <title>ShelterAssist</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
    <% if flash.keys.any? %>
      <% flash.keys.each do |key| %>
        <p class="flash flash_<%= key %>"><%= flash[key] %></p>
      <% end %>
    <% end %>
    <%= render 'layouts/login_logout_links' %>
    <%= yield %>
  </body>
</html>
